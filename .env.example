# Application Configuration
# Set to 'development' for hot reload, 'production' for production mode
ENV=development

# Server Configuration
HOST=localhost
PORT=8000

# Logging Configuration
# Possible values: debug, info, warning, error, critical
LOG_LEVEL=debug

# Database Configuration
# Supported DB types: sqlite, mysql, firestore
DB_TYPE=sqlite
SQLITE_DB_PATH=db.sqlite3

# MySQL Configuration (required if DB_TYPE=mysql)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=
# MYSQL_DATABASE=test

# Firestore Configuration (required if DB_TYPE=firestore)
# FIRESTORE_PROJECT_ID=your-project-id
# FIRESTORE_CREDENTIALS_PATH=path/to/credentials.json
